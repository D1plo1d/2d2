$inactive_color = #309
$active_color = #37D

.canvas
  
  shape-rendering: geometricPrecision

  .shape-group

    // Shapes Base
    stroke-width 2px /* This is overriden in js */
    stroke $inactive_color
    .active, *:hover
      stroke $active_color
      fill: $active_color

    // Implicit Points
    circle.implicit-point
      stroke: none
      stroke-width: 0

    // Dimensions
    .dimension
      cursor: pointer
      stroke: #ccc


  .guide-group

    // Guide Base
    stroke-width 1px
    stroke-dasharray: 4 4;
    stroke: rgb(51, 51, 51);


  .text-group
    // Note: The majority of text-group styles are set in JS

    // Dimensions
    &.dimension-text
      &:hover
        cursor: pointer

